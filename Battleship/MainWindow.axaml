<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Battleship.Controls"
        mc:Ignorable="d" d:DesignWidth="850" d:DesignHeight="700"
        x:Class="Battleship.MainWindow"
        Title="Battleship">
    <StackPanel Margin="20">
        <StackPanel HorizontalAlignment="Center" Margin="3" Name="SetupPanel" Orientation="Horizontal">
            <Button Click="PlaceCarrier">Αεροπλανοφόρο x</Button>
            <Button>Αντιτορπιλικό</Button>
            <Button>Πολεμικό</Button>
            <Button>Υποβρύχιο</Button>
        </StackPanel>

        <controls:BattleshipGrid Name="PlayerGrid" Height="550" Width="500"/>

        <Button HorizontalAlignment="Center" Click="Hit" Margin="5">Simulate Hit</Button>
        <Button HorizontalAlignment="Center" Click="SimulateSuccessfulHit" Margin="5">Simulate Successful Hit</Button>
        <Button HorizontalAlignment="Center" Click="SimulateEnemyHit" Margin="5">Simulate Enemy Hit</Button>
    </StackPanel>
</Window>
